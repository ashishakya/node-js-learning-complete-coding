<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md">
      <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Edit Your Home on AirBnB</h1>
      <form action="/host/edit-home" method="POST" class="max-w-md mx-auto">
          <input type="hidden" name="id" value="<%=home._id%>">
        <input
          type="text"
          name="houseName"
          placeholder="Enter your House Name"
          value="<%=home.houseName%>"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>
        <input
          type="text"
          name="price"
          placeholder="Price Per Night"
          value="<%=home.price%>"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>
        <input
          type="text"
          name="location"
          placeholder="Location"
          value="<%=home.location%>"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>
        <input
          type="text"
          name="rating"
          placeholder="Rating"
          value="<%=home.rating%>"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>
        <input
          type="text"
          name="photoUrl"
          placeholder="Enter Photo URL"
          value="<%=home.photoUrl%>"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>
          <input
          type="text"
          name="description"
          placeholder="Enter Description"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
           value="<%=home.description%>"
          />
        <input type="submit" value="Update" class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300" />
      </form>
    </main>
  </body>
</html>
