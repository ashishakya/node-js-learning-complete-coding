<%- include('../partials/head') %>
</head>
<body class="bg-gray-100">
  <%- include('../partials/nav') %>
  <main class="container mx-auto mt-10 p-6 max-w-lg bg-white rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold mb-8 text-center text-gray-800">Sign up with your info</h1>
    <% if(typeof errors !== "undefined" && errors && errors.length) { %>
        <div class="bg-red-100 border border-red-400 text-red">
            <ul class="list-disc list-inside space-y-1">
                <% errors.forEach(error=>{ %>
                    <li><%= error %></li>
                <% }) %>
            </ul>
        </div>
    <% }%>
    <form action="/signup" method="POST" class="space-y-5">
      <!-- First Name -->
      <input
        type="text"
        name="firstName"
        placeholder="First Name"
        value="<%= typeof oldInput!=='undefined' ? oldInput.firstName : ''%>"
        class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        required
      />

      <!-- Last Name -->
      <input
        type="text"
        name="lastName"
        placeholder="Last Name"
        class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        value="<%= typeof oldInput!=='undefined' ? oldInput.lastName : ''%>"
        required
      />

      <!-- Email -->
      <input
        type="email"
        name="email"
        placeholder="Email"
        class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        value="<%= typeof oldInput!=='undefined' ? oldInput.email : ''%>"
        required
      />

      <!-- Password -->
      <input
        type="password"
        name="password"
        placeholder="Enter Your Password"
        class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        required
      />

      <!-- Confirm Password -->
      <input
        type="password"
        name="confirmPassword"
        placeholder="Confirm Your Password"
        class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        required
      />

      <!-- User Type Radio -->
      <div class="flex items-center justify-between">
        <label class="flex items-center gap-2">
          <input type="radio" name="userType" value="guest" required class="text-red-500 focus:ring-red-500"
          checked="<%= typeof oldInput!=='undefined' ? oldInput.userType==='guest' : false%>"
          />
          <span class="text-gray-700">Guest</span>
        </label>
        <label class="flex items-center gap-2">
          <input type="radio" name="userType" value="host" required class="text-red-500 focus:ring-red-500"
          checked="<%= typeof oldInput!=='undefined' ? oldInput.userType==='host' : false%>"
           />
          <span class="text-gray-700">Host</span>
        </label>
      </div>

      <!-- Terms and Conditions Checkbox -->
      <label class="flex items-center gap-2 text-sm text-gray-600">
        <input type="checkbox" name="terms" required class="text-red-500 focus:ring-red-500" />
        I accept the <a href="#" class="text-red-500 hover:underline">terms and conditions</a>.
      </label>

      <!-- Submit Button -->
      <button type="submit" class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300">
        Sign Up
      </button>
    </form>
  </main>
</body>
</html>
